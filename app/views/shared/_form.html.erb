<div data-form-target="formSession" class="absolute fixed z-30 w-[100%] h-[100vh] top-0 bg-black/50 backdrop-blur-sm flex items-center justify-center">
  <div class="w-[45%] bg-[#fffaeb] h-[90vh] border-2 rounded-lg border-[#FFDF20] p-5 overflow-y-auto">
    <%= form_with(model: @session_record, local: true, multipart: true) do |f| %>

      <header class="w-full h-[8vh] flex items-center justify-between">
        <div class="flex items-center gap-5">
          <div class="w-15 h-15 flex items-center justify-around bg-gradient-to-br from-[#FB64B6] to-[#FF2056] rounded-full">
            <%= render "shared/svg/camera"%>
          </div>
          <div>
            <h2 class="text-2xl">Nova lembranca especial</h2>
            <span class="text-sm">Guarde todo momento para sempre</span>
          </div>
        </div>
        <div 
          data-action="click->form#toggleForm" 
          class="h-10 w-10 rounded-full bg-gray-200 text-black shadow-xl cursor-pointer flex items-center justify-center"
        >
          X
        </div>
      </header>

      <div class="w-full mt-8 p-5 h-110 bg-[#fffef9] rounded-lg border-2 border-dashed border-[#FFDF20] relative flex flex-col justify-center -rotate-0.5 shadow-lg">
        <div class="w-40 h-10 bg-[#fb64b6] text-white flex items-center justify-center absolute -top-4 left-1/2 -translate-x-1/2 z-10 rounded-4xl">
          Foto da jogatina
        </div>

        <div data-form-target="choiceImage" data-action="click->form#uploadInputFile" class="w-full h-[90%] border-2 border-dashed rounded-lg border-[#FFDF20] hover:bg-[#fffbe2] hover:cursor-pointer transition flex flex-col items-center justify-center gap-3">
          <div class="flex flex-col items-center gap-2">
            <%= render "shared/svg/picture" %>
            <h2 class="text-gray-600">Clique para adicionar uma foto</h2>
            <span class="text-gray-600">Torne o momento ainda mais memoravel</span>
          </div>
        </div>

        <div data-form-target="selectedImage" class="hidden w-full h-full flex items-center justify-center">
          <div data-action="click->form#uploadInputFile"  class="w-[45%] h-[90%] shadow-lg p-5 text-center flex flex-col gap-8 cursor-pointer">
            <div class="w-[90%] h-[75%]">
              <img class="w-full h-full" id="previewImage" alt="Preview">
            </div>
            <span class="text-sm text-gray-500"> Clique para trocar a foto</span>
          </div>
        </div>

        <%= f.file_field :image, 
          accept: 'image/png, image/jpeg',
          class: "hidden",
          data: { 
            action: "change->form#newImageUpload", 
            form_target: "inputFile" 
          } 
        %>
      </div>


      <div class="flex gap-7 p-2 mt-10">
        <!-- T√≠tulo Card -->
        <div class="bg-yellow-100 rounded-2xl p-6 w-96 shadow-lg rotate-1">
          <div class="flex items-center gap-2 mb-4">
            <span class="text-lg font-medium text-gray-700">
              ‚≠ê
              <%= f.label :title, "Titulo" %>
            </span>
          </div>
          
          <div class="border-2 border-yellow-400 rounded-lg bg-yellow-50">
            <%= f.text_field :title, placeholder: "Domingo M√°gico ‚ú®", class:"w-full h-full p-3 text-sm text-gray-600" %>
          </div>
        </div>

        <!-- Subt√≠tulo Card -->
        <div class="bg-pink-100 rounded-2xl p-6 w-96 shadow-lg -rotate-1">
          <div class="flex items-center gap-2 mb-4">
            <span class="text-lg font-medium text-gray-700">
              ‚ù§Ô∏è <%= f.label :subtitle, "Subtitulo" %>
            </span>
          </div>
          
          <div class="border-2 border-pink-300 rounded-lg bg-white">
            <!-- trocar para calendario -->
            <%= f.text_field :subtitle, placeholder: "10/01/2025 üóìÔ∏è", class: "w-full h-full p-3 text-sm text-gray-600" %>
          </div>
        </div>
      </div>

      <div class="bg-[#eff6ff] rounded-2xl p-6 mb-6 mt-8 shadow-lg">
        <h3 class="text-lg font-handwriting text-gray-700 mb-4">
          <%= f.label :description, "Conte um pouco do momento..." %>
        </h3>
        
        <%= f.text_area :description, 
            placeholder: "Foi um dia especial porque...", 
            rows: 6,
            class: "w-full border-2 border-blue-200 rounded-lg p-4 bg-blue-50/30 text-gray-600 text-sm resize-none focus:outline-none focus:border-blue-300 placeholder-gray-400"
        %>
      </div>

      <div class="bg-[#f0fdf4] rounded-2xl p-6 shadow-lg">
        <div class="flex items-center gap-2 mb-4">
          üë•
          <h3 class="text-lg font-handwriting text-gray-700">Quem jogou?</h3>
        </div>
  
        <!-- Tags de jogadores -->
        <div class="flex flex-wrap gap-2 mb-4">
            <div class="inline-flex items-center gap-2 bg-green-200 text-gray-700 px-4 py-2 rounded-full">
              <span class="text-sm font-medium">Nome</span>
              <button type="button" class="text-gray-600 hover:text-gray-800">
                <%= render "shared/svg/close" %>
              </button>
            </div>
        </div>
  
        <!-- Input e bot√£o adicionar -->
        <div class="flex gap-3">
          <input 
            data-form-target="inputAddPlayer" 
            data-action="keydown->form#addNamePlayer" 
            class="flex-1 border-2 border-green-300 rounded-lg p-3 bg-white text-gray-600 text-sm focus:outline-none focus:border-green-400 placeholder-gray-400"
            type="text" 
            placeholder="Jhon, Maria, Sidney"
          />

          <button 
            type="button" 
            data-action="click->form#addNamePlayer" 
            class="bg-green-500 hover:bg-green-600 text-white font-medium px-6 py-3 rounded-lg transition-colors font-handwriting text-md hover:cursor-pointer"
          >
            Adicionar
          </button>
        </div>
      </div>

      <%= f.hidden_field :list_session_player, data: { form_target: "hiddenFieldListPlayerSession"} %>

      <div class="max-w-4xl mx-auto p-6 rounded-lg bg-[#fff7ed] shadow-lg mt-5">
        <!-- T√≠tulo -->
        <div class="flex items-center gap-2 mb-4">
          <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <h2 class="text-2xl font-handwriting text-gray-800">Quais jogos?</h2>
        </div>

        <!-- Tags de Jogos -->
        <div class="flex flex-wrap gap-3 mb-4">
          <% games = ['Catan', 'Ticket to Ride', 'Azul', 'Dixit', 'Pandemic', 'Uno', 'War'] %>
          <% games.each do |game| %>
            <button class="flex items-center gap-2 px-4 py-2 text-sm bg-white border-2 border-orange-400 text-orange-600 rounded-full hover:bg-orange-100 transition-colors font-medium hover:cursor-pointer">
              <%= game %>
              <%= render "shared/svg/close" %>
            </button>
          <% end %>
        </div>

        <!-- Input e Bot√£o Adicionar -->
        <div class="flex gap-3 mb-4">
          <input 
            type="text" 
            data-form-target="inputAddGame" 
            placeholder="Dixit, Castle Combo, Scout" 
            data-action="keydown->form#addNameGame" 
            class="flex-1 px-4 py-3 bg-white border-2 border-orange-300 rounded-lg focus:outline-none focus:border-orange-500 text-gray-700 text-sm"
          />
          <button
            data-action="click->form#addNameGame"
            class="px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors font-medium hover:cursor-pointer"
          >
            Adicionar
          </button>
        </div>

        <!-- Tags de novos selecionados -->
        <div class="inline-block">
          <span class="px-4 py-2 text-sm bg-orange-200 text-orange-800 rounded-full font-medium">
            Castle combo
          </span>
        </div>
      </div>

      <%= f.hidden_field :list_session_game, data: { form_target: "sessionGameListHiddenField"} %>

      <%= f.label :session_duration, "Duracao da jogatina" %>
      <%= f.number_field :session_duration, placeholder: "30m" %>

      <%= f.submit 'criar' %>
    <% end %>

  </div>
</div>
